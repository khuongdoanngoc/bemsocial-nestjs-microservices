{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/bookstore-api-gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/bookstore-api-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/bookstore-api-gateway",
  "projects": {
    "auth-service": {
      "type": "application",
      "root": "apps/auth-service",
      "entryFile": "main",
      "sourceRoot": "apps/auth-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-service/tsconfig.app.json"
      }
    },
    "book-service": {
      "type": "application",
      "root": "apps/book-service",
      "entryFile": "main",
      "sourceRoot": "apps/book-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/book-service/tsconfig.app.json"
      }
    },
    "bookstore-api-gateway": {
      "type": "application",
      "root": "apps/bookstore-api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/bookstore-api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/bookstore-api-gateway/tsconfig.app.json"
      }
    },
    "contracts": {
      "type": "library",
      "root": "libs/contracts",
      "entryFile": "index",
      "sourceRoot": "libs/contracts/src",
      "compilerOptions": {
        "tsConfigPath": "libs/contracts/tsconfig.lib.json"
      }
    }
  }
}